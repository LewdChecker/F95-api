{
    "compileOnSave": true,
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "./dist",
        "allowJs": true,
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "incremental": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "declaration": true,
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./tests/",
        "./node_modules/",
        "./dist/"
    ]
}